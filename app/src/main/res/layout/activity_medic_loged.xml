<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unifei.spritze.spritze.medicLoged">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <SearchView
            android:id="@+id/searchPacient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"/>

        <ImageButton
            android:id="@+id/btnNewPacient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueAccent"
            app:srcCompat="@drawable/newuser"/>

        <ImageButton
            android:id="@+id/btnDosar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueAccent"
            app:srcCompat="@drawable/dosage"/>

        <ListView
            android:id="@+id/listPacients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"/>

    </LinearLayout>






</android.support.constraint.ConstraintLayout>
