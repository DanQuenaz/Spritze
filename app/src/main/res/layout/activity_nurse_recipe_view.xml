<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="com.unifei.spritze.spritze.medicRecipeView">

    <RelativeLayout
        android:id="@+id/bottonColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:focusableInTouchMode="true"
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/Nurse_pctName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nome Paciente"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>

                <TextView
                    android:id="@+id/Nurse_pctAge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Nurse_pctName"
                    android:gravity="center"
                    android:text="idade" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/spacer2"
            android:layout_below="@+id/card_view"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:focusableInTouchMode="true"
            android:id="@+id/card_view2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spacer2"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nameTextLayout"
                    android:layout_below="@+id/spacer0"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Receita"
                    android:theme="@style/Theme.AppCompat.Light">

                    <EditText
                        android:id="@+id/Nurse_textRecipe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/nameTextLayout1"
                    android:layout_below="@+id/nameTextLayout"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Observação"
                    android:theme="@style/Theme.AppCompat.Light">

                    <EditText
                        android:id="@+id/Nurse_textObs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine" />

                </android.support.design.widget.TextInputLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/spacer4"
            android:layout_below="@+id/card_view2"/>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:focusableInTouchMode="true"
            android:id="@+id/card_view3"
            android:layout_below="@id/spacer4"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Informações do Médico"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
                <TextView
                    android:id="@+id/Nurse_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:gravity="center"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/Nurse_mediccrm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Nurse_medic"
                    android:gravity="center"
                    android:text="TextView" />
                <TextView
                    android:id="@+id/Nurse_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Nurse_mediccrm"
                    android:gravity="center"
                    android:text="TextView" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:id="@+id/spacer3"
            android:layout_below="@+id/card_view3"/>

        <ImageButton
            android:id="@+id/Nurse_btnConfirmRecipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/spacer3"
            android:layout_marginBottom="16dp"
            android:background="@color/blueAccent"
            android:src="@drawable/ok" />

    </RelativeLayout>
</RelativeLayout>